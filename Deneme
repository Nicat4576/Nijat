    <script>
        function handleChoice(choice) {
            const messageElement = document.querySelector('.message');
            const choicesElement = document.querySelector('.choices');
            
            if (choice === 'evet') {
                messageElement.textContent = "Yia, bana g羹veniyor musun, saps覺k?"; // Evet se癟ildikd yaz覺
            } else {
                messageElement.textContent = "Twwak, geciyordum zaten, bilgilerini 癟ald覺m bile弘"; // Hay覺r se癟ildikd yaz覺
            }

